
## targets

default: Launchbury
images:
test: Launchbury

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true

## HOLCF-Nominal2
$(LOG)/HOLCF-Nominal2.gz: Nominal2/ROOT.ML Nominal2/*.thy
	@cd Nominal2; $(USEDIR) -b -f ROOT-NO-EXAMPLES.ML HOLCF HOLCF-Nominal2

## Launchbury

Launchbury: $(LOG)/HOLCF-Nominal2-Launchbury.gz

$(LOG)/HOLCF-Nominal2-Launchbury.gz: Launchbury/ROOT.ML Launchbury/document/root.tex Launchbury/document/root.bib Launchbury/document/map.tex Launchbury/*.thy  $(LOG)/HOLCF-Nominal2.gz
	@$(USEDIR) -i true -g true -d pdf HOLCF-Nominal2 Launchbury


## clean

clean:
	@rm -f $(LOG)/HOLCF-Nominal2.gz $(LOG)/HOLCF-Nominal2-Launchbury.gz
